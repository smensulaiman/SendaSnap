<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Material3 with edge-to-edge -->
    <style name="Theme.SendaSnap" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/surface_container</item>
        <item name="colorOnPrimaryContainer">@color/text_primary</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/on_primary</item>
        <item name="colorSecondaryContainer">@color/surface_variant</item>
        <item name="colorOnSecondaryContainer">@color/text_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/error_light</item>
        <item name="colorOnErrorContainer">@color/error</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="statusBarForeground">@color/white</item>
        <item name="android:navigationBarColor">@color/surface_variant</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Edge-to-edge -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">false</item>
        
        <!-- Typography -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.Montserrat.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Montserrat.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.Montserrat.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Montserrat.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.Montserrat.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Montserrat.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.Montserrat.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.Montserrat.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.Montserrat.LabelSmall</item>
        
        <!-- Calendar View specific overrides -->
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:colorControlHighlight">@color/primary</item>
        <item name="android:colorControlActivated">@color/primary</item>
        <item name="android:focusedMonthDateColor">@color/white</item>
        <item name="android:selectedWeekBackgroundColor">@color/primary</item>
    </style>
    
    
    <!-- Splash screen theme -->
    <style name="Theme.SendaSnap.Splash" parent="Theme.SendaSnap">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
    
</resources>