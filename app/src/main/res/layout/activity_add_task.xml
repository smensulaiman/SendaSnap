<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_variant">

    <!-- Enhanced Toolbar with Professional Styling -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="8dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Create New Schedule"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.Montserrat.TitleMedium"
            app:titleCentered="false"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/primary"
            app:menu="@menu/task_details_menu"
            app:contentInsetStartWithNavigation="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Enhanced ScrollView with Professional Styling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Task Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task Title"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/text_secondary"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconTint="@color/primary"
                    app:startIconContentDescription="Task title"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enhanced Task Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:hint="Description"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/text_secondary"
                    app:startIconTint="@color/primary"
                    app:startIconContentDescription="Task description"
                    app:helperText="Provide additional details about the task (optional)"
                    app:helperTextTextColor="@color/text_secondary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="12sp"
                        android:textColor="@color/text_primary"
                        android:gravity="top"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Date and Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:hint="Select Date"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_calendar_outlined"
                        app:startIconTint="@color/primary"
                        app:startIconContentDescription="Select date"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:hint="Select Time"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_time"
                        app:startIconTint="@color/primary"
                        app:startIconContentDescription="Select time"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/primary_light" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Assignee Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Task Assignee"
                        android:textAppearance="@style/TextAppearance.Montserrat.LabelLarge"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:letterSpacing="0.01" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Assignee"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="1dp"
                        app:endIconDrawable="@drawable/ic_arrow_drop_down"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@color/primary"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_profile_outlined"
                        app:startIconTint="@color/primary"
                        app:startIconContentDescription="Select assignee"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/editTextAssignee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="12sp"
                            android:textColor="@color/text_primary"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Enhanced Status Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Task Status"
                        android:textAppearance="@style/TextAppearance.Montserrat.LabelLarge"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:letterSpacing="0.01" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="12dp"
                        app:chipSpacingHorizontal="12dp"
                        app:chipSpacingVertical="4dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRunning"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="In Progress"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:minHeight="48dp"
                            app:chipBackgroundColor="@color/status_running_light"
                            app:chipStrokeColor="@color/status_running"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="24dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPending"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pending"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:minHeight="48dp"
                            app:chipBackgroundColor="@color/status_pending_light"
                            app:chipStrokeColor="@color/status_pending"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="24dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCompleted"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completed"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:minHeight="48dp"
                            app:chipBackgroundColor="@color/status_completed_light"
                            app:chipStrokeColor="@color/status_completed"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="24dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCancelled"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancelled"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:minHeight="48dp"
                            app:chipBackgroundColor="@color/status_cancelled_light"
                            app:chipStrokeColor="@color/status_cancelled"
                            app:chipStrokeWidth="2dp"
                            app:chipCornerRadius="24dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/primary_light" />
            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingHorizontal="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginEnd="20dp"
                    android:text="Cancel"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelLarge"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:minWidth="140dp"
                    android:letterSpacing="0.01"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/primary_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Task"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="160dp"
                    android:letterSpacing="0.01"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="@color/primary_dark"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>