<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="12dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/professional_gradient">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Create Work Schedule"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.Material3.ActionBar.Title"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Enhanced ScrollView with Professional Styling -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Task Title -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task Title"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/text_secondary"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconTint="@color/primary"
                    app:startIconContentDescription="Task title"
                    app:boxStrokeErrorColor="@color/text_black"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Enhanced Task Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:hint="Description"
                    app:boxStrokeColor="@color/primary"
                    app:boxStrokeWidthFocused="2dp"
                    app:hintTextColor="@color/text_secondary"
                    app:startIconTint="@color/primary"
                    app:startIconContentDescription="Task description"
                    app:helperText="Provide additional details about the task (optional)"
                    app:helperTextTextColor="@color/text_secondary"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:inputType="textCapSentences|textMultiLine"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"
                        android:gravity="top"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Date and Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:hint="Select Date"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_calendar_outlined"
                        app:startIconTint="@color/black"
                        app:startIconContentDescription="Select date"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="date"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/text_black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        android:hint="Select Time"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_time"
                        app:startIconTint="@color/black"
                        app:startIconContentDescription="Select time"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="time"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/text_black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Enhanced Assignee Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Task Assignee"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Select Assignee"
                        app:boxStrokeColor="@color/primary"
                        app:boxStrokeWidthFocused="1dp"
                        app:endIconDrawable="@drawable/ic_arrow_drop_down"
                        app:endIconMode="dropdown_menu"
                        app:endIconTint="@color/primary"
                        app:hintTextColor="@color/text_secondary"
                        app:startIconDrawable="@drawable/ic_profile_outlined"
                        app:startIconTint="@color/black"
                        app:startIconContentDescription="Select assignee"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/editTextAssignee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="none"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/text_black"
                            android:padding="16dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Enhanced Status Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/badge_12"
                    android:padding="@dimen/dimen_12"
                    android:backgroundTint="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Task Status"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="16dp"
                        app:chipSpacingVertical="0dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPending"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:minHeight="48dp"
                            android:text="Pending"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/warning_dark"
                            app:chipBackgroundColor="@color/white"
                            app:chipStrokeColor="@color/warning_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipRunning"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:text="In Progress"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/primary"
                            app:chipBackgroundColor="@color/primary_light"
                            app:chipStrokeColor="@color/primary"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCompleted"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:text="Completed"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/success_dark"
                            app:chipBackgroundColor="@color/success_light"
                            app:chipStrokeColor="@color/success_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipCancelled"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:text="Cancelled"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/error_dark"
                            app:chipBackgroundColor="@color/error_light"
                            app:chipStrokeColor="@color/error_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

                <!-- Enhanced Priority Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="vertical"
                    android:background="@drawable/badge_12"
                    android:padding="@dimen/dimen_12"
                    android:backgroundTint="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Task Priority"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroupPriority"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="16dp"
                        app:chipSpacingVertical="0dp"
                        app:singleSelection="true">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPriorityLow"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/warning_medium"
                            app:chipStrokeColor="@color/warning_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPriorityNormal"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Normal"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/success_medium"
                            app:chipStrokeColor="@color/success_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipPriorityHigh"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="High"
                            android:textSize="@dimen/text_size_medium"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/black"
                            app:chipBackgroundColor="@color/error_medium"
                            app:chipStrokeColor="@color/error_dark"
                            app:chipCornerRadius="24dp"
                            app:chipStrokeWidth="2dp" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </LinearLayout>

            <!-- File Attachments Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badge_12"
                android:padding="16dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:backgroundTint="@color/success_light">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_attach_file"
                        app:tint="@color/success_dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="File Attachments"
                            android:fontFamily="@font/montserrat_bold"
                            android:textColor="@color/success_dark"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add files, images, or documents to this task"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAddFile"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attach File"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        app:icon="@drawable/ic_add"
                        app:iconSize="16dp"
                        app:iconTint="@color/primary" />

                </LinearLayout>

                <!-- Attached Files List -->
                <LinearLayout
                    android:id="@+id/layoutAttachedFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- File Item Template -->
                    <LinearLayout
                        android:id="@+id/layoutFileItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_8"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_file"
                            app:tint="@color/primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textFileName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="document.pdf"
                                android:textAppearance="@style/TextAppearance.Montserrat.BodyMedium"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textFileSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.4 MB"
                                android:textAppearance="@style/TextAppearance.Montserrat.BodySmall"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_xsmall" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonRemoveFile"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remove"
                            android:textSize="@dimen/text_size_xsmall"
                            android:textColor="@color/error"
                            app:icon="@drawable/ic_delete"
                            app:iconSize="14dp"
                            app:iconTint="@color/error" />

                    </LinearLayout>

                </LinearLayout>

                <!-- No Files Message -->
                <TextView
                    android:id="@+id/textNoFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:padding="@dimen/dimen_16"
                    android:text="No files attached yet"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/error_dark"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="center"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/primary_light" />

            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingHorizontal="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCancel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginEnd="20dp"
                    android:text="Cancel"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelLarge"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:minWidth="140dp"
                    android:letterSpacing="0.01"
                    app:cornerRadius="16dp"
                    app:rippleColor="@color/primary_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create New Task"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:minWidth="160dp"
                    android:letterSpacing="0.01"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="4dp"
                    app:icon="@drawable/ic_add"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconTint="@android:color/white"
                    app:rippleColor="@color/primary_dark"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>