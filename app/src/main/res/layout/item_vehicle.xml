<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Vehicle Image Container -->
            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_8"
                android:background="@drawable/vehicle_image_placeholder"
                android:padding="1dp">

                <ImageView
                    android:id="@+id/imgVehicle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO"
                    android:scaleType="fitCenter"
                    android:src="@drawable/car_placeholder"
                    tools:src="@drawable/car_placeholder" />

            </FrameLayout>

            <!-- Vehicle Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!-- Vehicle Name and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtVehicleName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:maxLines="1"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        tools:text="Toyota Camry" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtMakeModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_xsmall"
                    tools:text="Toyota Camry 2020" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtChassisNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/warning"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dimen_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_xxsmall"
                        tools:text="FK'-1212" />

                    <TextView
                        android:id="@+id/txtVehicleId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/success"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_bold"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/dimen_4"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_xxsmall"
                        tools:text="FK'-1212"
                        android:layout_marginStart="@dimen/dimen_4"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top">

                <LinearLayout
                    android:id="@+id/layoutEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtBuyingPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        tools:text="ï¿¥5,000" />

                    <ImageView
                        android:id="@+id/imgRightArrow"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/primary" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtPhotoCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/badge_4"
            android:fontFamily="@font/montserrat_semi_bold"
            android:paddingHorizontal="@dimen/dimen_8"
            android:layout_margin="@dimen/dimen_8"
            android:text="4 photoes"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_xxsmall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>