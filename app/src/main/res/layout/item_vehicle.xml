<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/border_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Vehicle Image Container -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@drawable/vehicle_image_placeholder">

            <ImageView
                android:id="@+id/imgVehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/no_image"
                tools:src="@drawable/no_image" />

        </FrameLayout>

        <!-- Vehicle Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Vehicle Name and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/txtVehicleName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Toyota Camry" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVehicleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipCornerRadius="10dp"
                    app:chipMinHeight="20dp"
                    android:textSize="9sp"
                    android:text="Available"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipStrokeColor="@color/primary"
                    android:textColor="@color/primary" />

            </LinearLayout>

            <!-- Make, Model, Year -->
            <TextView
                android:id="@+id/txtMakeModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Toyota Camry 2020" />

            <!-- Chassis and Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtChassisNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/text_hint"
                    android:textSize="10sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Chassis: ABC123456789" />

                <TextView
                    android:id="@+id/txtBuyingPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="ï¿¥5,000" />

            </LinearLayout>

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/primary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>