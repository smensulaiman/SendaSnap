<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/glass_effect"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Vehicle Image -->
        <ImageView
            android:id="@+id/imgVehicle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/vehicle_image_placeholder"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_car_placeholder"
            tools:src="@drawable/ic_car_placeholder" />

        <!-- Vehicle Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Toyota Camry"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                tools:text="Toyota Camry" />

            <TextView
                android:id="@+id/txtChassisNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Chassis: ABC123456"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                tools:text="Chassis: ABC123456" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="2020"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="2020" />

                <TextView
                    android:id="@+id/txtColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="White"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    tools:text="White" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtSearchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Searched 2 hours ago"
                android:textColor="@color/text_hint"
                android:textSize="11sp"
                tools:text="Searched 2 hours ago" />

        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_arrow_forward"
            android:tint="@color/text_hint" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
