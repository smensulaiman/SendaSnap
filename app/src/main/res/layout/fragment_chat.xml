<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_background"
    tools:context=".fragments.ChatFragment">

    <!-- Shimmer Loading -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:shimmer_duration="1000"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="0.7"
        app:shimmer_highlight_alpha="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/dimen_8">

            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />
            <include layout="@layout/shimmer_item_chat" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Main Content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecentChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/dimen_8"
        android:paddingBottom="106dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_recent_chat" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dimen_24"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/dimen_24"
            android:src="@drawable/ic_chat_outlined"
            app:tint="@color/text_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8"
            android:text="No Chats Yet"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="@color/text_primary"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a conversation by selecting a contact"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

    <!-- New Chat FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="106dp"
        android:src="@drawable/ic_telegram_64"
        app:backgroundTint="@color/primary"
        app:elevation="8dp"
        app:fabSize="normal"
        app:pressedTranslationZ="12dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.RoundedFAB"
        app:tint="@color/white" />

</FrameLayout>
