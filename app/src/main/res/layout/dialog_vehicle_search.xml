<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Vehicle"
        android:textColor="@color/text_primary"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a chassis number to find vehicle details."
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="20dp" />

    <!-- Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilChassisNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter chassis number"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/primary"
        app:endIconMode="clear_text"
        app:endIconTint="@color/text_hint"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etChassisNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/montserrat_regular" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Primary Action -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Search"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="8dp"
        app:backgroundTint="@color/primary"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:rippleColor="@color/primary_light" />

    <!-- Action Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/text_secondary"
        style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>
