<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_vehicle"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_large"
        android:fontFamily="@font/montserrat_semi_bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select search type and enter search query to find vehicle details."
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_small"
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginBottom="20dp" />

    <!-- Search Type Spinner -->
    <LinearLayout
        android:id="@+id/layoutSpinnerContainer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/outline_box_shape"
        android:backgroundTint="@color/text_secondary"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner
            android:id="@+id/spinnerSearchType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:popupBackground="@android:color/transparent" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/text_secondary" />

        <ImageView
            android:id="@+id/imgSpinnerArrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/outline_arrow_ios_24"
            android:rotation="90"
            android:contentDescription="Select search type"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_marginHorizontal="@dimen/dimen_8" />

    </LinearLayout>

    <!-- Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSearchQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Enter search query"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/primary"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSearchQuery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="@dimen/text_size_medium"
            android:text="251144"
            android:textColor="@color/text_primary"
            android:fontFamily="@font/montserrat_semi_bold" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Primary Action -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/search"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginBottom="8dp"
        app:backgroundTint="@color/primary"
        app:cornerRadius="4dp"
        app:rippleColor="@color/primary_variant"
        android:padding="@dimen/dimen_0"
        android:layout_margin="0dp"/>

    <!-- Action Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/text_secondary"
        style="@style/Widget.Material3.Button.TextButton" />

</LinearLayout>
