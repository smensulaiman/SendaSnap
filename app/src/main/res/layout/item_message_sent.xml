<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_16"
    android:paddingTop="@dimen/dimen_8"
    android:paddingEnd="@dimen/dimen_16"
    android:paddingBottom="@dimen/dimen_8">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSentMessage"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_light"
        app:cardCornerRadius="@dimen/dimen_12"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/txtSentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:lineSpacingExtra="4dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_medium"
            tools:text="Hello, how are you? This is a longer message to test the layout." />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/layoutSentTimeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/cardSentMessage"
        app:layout_constraintTop_toBottomOf="@id/cardSentMessage">

        <TextView
            android:id="@+id/txtSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_xsmall"
            tools:text="10:30 AM" />

        <ImageView
            android:id="@+id/imgSentStatus"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_check"
            app:tint="@color/text_secondary"
            tools:src="@drawable/ic_check" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

