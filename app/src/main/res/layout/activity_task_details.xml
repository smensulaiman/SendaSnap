<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/surface_variant"
    tools:context=".activities.TaskDetailsActivity">

    <!-- Enhanced Toolbar with Professional Styling -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        app:elevation="8dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:title="Task Details"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.Montserrat.TitleMedium"
            app:titleCentered="false"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/primary"
            app:menu="@menu/task_details_menu"
            app:contentInsetStartWithNavigation="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Enhanced ScrollView with Professional Styling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="@color/background"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingBottom="32dp">

            <!-- Task Information Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Task Title -->
                <TextView
                    android:id="@+id/textTaskTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Title"
                    android:textAppearance="@style/TextAppearance.Montserrat.HeadlineMedium"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <!-- Task Description -->
                <TextView
                    android:id="@+id/textTaskDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:text="Task description goes here"
                    android:textAppearance="@style/TextAppearance.Montserrat.BodyMedium"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

            <!-- Date and Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_8"
                android:orientation="vertical">

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_calendar_outlined"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Date"
                            android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textTaskDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dec 15, 2024"
                            android:textAppearance="@style/TextAppearance.Montserrat.BodyLarge"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Time"
                            android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textTaskTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:00"
                            android:textAppearance="@style/TextAppearance.Montserrat.BodyLarge"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/primary_light" />

            <!-- Assignee and Status Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Assignee -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_profile_outlined"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assignee"
                            android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/textTaskAssignee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            android:textAppearance="@style/TextAppearance.Montserrat.BodyLarge"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_8"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/primary"
                        android:src="@drawable/ic_check"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipTaskStatus"
                            style="@style/Widget.Material3.Chip.Assist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Running"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:minHeight="32dp"
                            app:chipBackgroundColor="@color/status_running_light"
                            app:chipStrokeColor="@color/status_running"
                            app:chipStrokeWidth="1dp"
                            app:chipCornerRadius="16dp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonChangeStatus"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change"
                        android:textSize="12sp"
                        android:textColor="@color/primary" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="@dimen/dimen_16"
                android:background="@color/primary_light" />

            <!-- Enhanced Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:paddingHorizontal="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEdit"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="Edit"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:textSize="12sp"
                    android:minWidth="100dp"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="1dp"
                    app:cornerRadius="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDelete"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textAppearance="@style/TextAppearance.Montserrat.LabelMedium"
                    android:textStyle="bold"
                    android:textColor="@color/error"
                    android:textSize="12sp"
                    android:minWidth="100dp"
                    app:strokeColor="@color/error"
                    app:strokeWidth="1dp"
                    app:cornerRadius="16dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
