<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="12dp"
    android:fitsSystemWindows="true"
    android:background="@drawable/professional_gradient"
    tools:context=".activities.VehicleDetailsActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Vehicle Details"
            app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/black"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Basic Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Basic Information"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Make:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtMake"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Toyota"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtModel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Camry"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Year:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtYear"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2020"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Color:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtColor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="White"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Chassis:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/txtChassis"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ABC123456"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Purchase Information"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Buy Date:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtBuyDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2024-01-15"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Price:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥25,000"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Auction Ship:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtAuctionShip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="AUC001"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Shipping Information -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Shipping Information"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_semi_bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Expected Yard Date:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtExpectedYardDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2024-02-01"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rikso From:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtRiksoFrom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tokyo"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rikso To:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtRiksoTo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Osaka"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rikso Cost:"
                        android:textColor="@color/text_black"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtRiksoCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="￥500"
                        android:textColor="@color/text_primary"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Vehicle Images Grid -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Vehicle Photos"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_semi_bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewVehicleImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Upload New Images Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/primary_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Add More Photos"
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat_semi_bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPhotos"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        app:icon="@drawable/plus"
                        app:iconTint="@color/primary"
                        app:iconSize="32dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="2dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/primary"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewPendingImages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnUploadPhotos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:text="Upload Photos"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        app:icon="@drawable/ic_upload"
                        app:iconGravity="textStart"
                        app:iconPadding="8dp"
                        app:backgroundTint="@color/primary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
