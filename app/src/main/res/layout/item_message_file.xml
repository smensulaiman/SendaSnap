<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimen_12"
    android:paddingEnd="@dimen/dimen_12"
    android:paddingTop="@dimen/dimen_4"
    android:paddingBottom="@dimen/dimen_4">

    <!-- Sent File Message (Right Aligned) -->
    <LinearLayout
        android:id="@+id/layoutSentFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end"
                android:layout_marginEnd="@dimen/dimen_8">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_12"
                    android:gravity="center_vertical"
                    android:minWidth="200dp">

                    <ImageView
                        android:id="@+id/imgSentFileIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/dimen_12"
                        android:src="@drawable/ic_file"
                        app:tint="@color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtSentFileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="document.pdf" />

                        <TextView
                            android:id="@+id/txtSentFileSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xsmall"
                            tools:text="2.5 MB" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dimen_4"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtSentFileTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_xxsmall"
                    tools:text="10:30 AM" />

                <ImageView
                    android:id="@+id/imgSentFileStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:src="@drawable/ic_check"
                    app:tint="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Received File Message (Left Aligned) -->
    <LinearLayout
        android:id="@+id/layoutReceivedFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="@dimen/dimen_8">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                app:cardBackgroundColor="@color/surface_container"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dimen_12"
                    android:gravity="center_vertical"
                    android:minWidth="200dp">

                    <ImageView
                        android:id="@+id/imgReceivedFileIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="@dimen/dimen_12"
                        android:src="@drawable/ic_file"
                        app:tint="@color/primary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtReceivedFileName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:maxLines="1"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium"
                            tools:text="document.pdf" />

                        <TextView
                            android:id="@+id/txtReceivedFileSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_4"
                            android:fontFamily="@font/montserrat"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_xsmall"
                            tools:text="2.5 MB" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtReceivedFileTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_4"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_xxsmall"
                tools:text="10:31 AM" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

