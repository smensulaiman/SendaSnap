<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="12dp"
    android:fitsSystemWindows="true"
    android:background="@color/color_background">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Task Details"
            app:titleTextColor="@color/text_primary"
            app:titleTextAppearance="@style/TextAppearance.Material3.ActionBar.Title"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/text_primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/dimen_16"
            android:paddingBottom="32dp">

            <!-- Task Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Info"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <!-- Task Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dimen_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/editTextTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>
                </LinearLayout>

                <!-- Task Description -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dimen_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/editTextDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"
                        android:maxLines="1000"
                        android:scrollbars="none"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Date and Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date and Time"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <!-- Date -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dimen_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/editTextDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>
                </LinearLayout>

                <!-- Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/dimen_12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/editTextTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/text_black"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Assignees Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dimen_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Assignees"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <TextView
                    android:id="@+id/editTextAssignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <!-- Selected Assignees Chips -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupAssignees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="8dp" />

            </LinearLayout>

            <!-- Status Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badge_4"
                android:layout_marginTop="@dimen/dimen_16"
                android:padding="@dimen/dimen_12"
                android:backgroundTint="@color/primary_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Status"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="-8dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPending"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/white"
                        app:chipStrokeColor="@color/warning_dark"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRunning"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In Progress"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/primary_light"
                        app:chipStrokeColor="@color/primary"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCompleted"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/success_light"
                        app:chipStrokeColor="@color/success_dark"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipCancelled"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelled"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/montserrat_semi_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/error_light"
                        app:chipStrokeColor="@color/error_dark"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Priority Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16"
                android:orientation="vertical"
                android:background="@drawable/badge_4"
                android:padding="@dimen/dimen_12"
                android:backgroundTint="@color/success_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Priority"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_black"
                    android:layout_marginBottom="@dimen/dimen_8"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPriority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingHorizontal="8dp"
                    app:chipSpacingVertical="-8dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityLow"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/warning"
                        app:chipStrokeColor="@color/black"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityNormal"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/success"
                        app:chipStrokeColor="@color/black"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPriorityHigh"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/black"
                        app:chipBackgroundColor="@color/error"
                        app:chipStrokeColor="@color/black"
                        app:chipCornerRadius="24dp"
                        app:chipStrokeWidth="2dp" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- File Attachments Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/badge_4"
                android:padding="16dp"
                android:layout_marginTop="@dimen/dimen_16"
                android:backgroundTint="@color/warning_light">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dimen_8">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_attach_file"
                        app:tint="@color/success_dark" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="File Attachments"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="@color/success_dark"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <!-- Attached Files List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewAttachments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone" />

                <!-- No Files Message -->
                <TextView
                    android:id="@+id/textNoFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:padding="@dimen/dimen_16"
                    android:text="No files attached"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

