<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="@dimen/dimen_8"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/background_blur"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Status Indicator Bar -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_marginVertical="@dimen/dimen_16"/>

        <!-- Task Title -->
        <TextView
            android:id="@+id/textTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="2"
            android:text="Task Title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:paddingEnd="@dimen/dimen_8"
            app:layout_constraintEnd_toStartOf="@+id/layoutStatusBadge"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintTop_toTopOf="@+id/statusIndicator" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/textTaskDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semi_bold"
            android:maxLines="3"
            android:text="Task description goes here\ndfjhdfjhdsjkhf\nhdsafkjdshfkdj\nkjdhfjksdhfkhds"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_xsmall"
            app:layout_constraintBottom_toTopOf="@+id/layoutTimeRow"
            app:layout_constraintEnd_toStartOf="@+id/imgRightArrow"
            app:layout_constraintStart_toStartOf="@+id/textTaskTitle"
            app:layout_constraintTop_toBottomOf="@id/textTaskTitle" />

        <!-- Time and Assignees Row -->
        <LinearLayout
            android:id="@+id/layoutTimeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/layoutCreatedBy"
            app:layout_constraintStart_toStartOf="@+id/textTaskTitle">

            <TextView
                android:id="@+id/textTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9:00 AM"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/text_secondary" />

            <!-- Overlapping Assignee Avatars Container -->
            <LinearLayout
                android:id="@+id/layoutAssigneeAvatars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical" />

            <!-- File Attachment Icon -->
            <ImageView
                android:id="@+id/imgAttachment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_attach_file"
                android:visibility="gone"
                app:tint="@color/primary" />

        </LinearLayout>

        <!-- Created By Row -->
        <LinearLayout
            android:id="@+id/layoutCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/statusIndicator"
            app:layout_constraintStart_toStartOf="@+id/textTaskTitle">

            <TextView
                android:id="@+id/textCreatedByLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Created by"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/text_size_xsmall"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="4dp" />

            <ImageView
                android:id="@+id/imgCreatorAvatar"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/textCreatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sulaiman"
                android:textAppearance="@style/TextAppearance.Montserrat.BodySmall"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Status Chip with Badge Container -->
        <FrameLayout
            android:id="@+id/layoutStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="@dimen/dimen_8">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTaskStatus"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:minHeight="43dp"
                android:layout_marginEnd="@dimen/dimen_4"
                android:text="Pending"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_xsmall"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="8dp"
                app:chipStrokeColor="@color/warning_dark"
                app:chipStrokeWidth="1dp" />

            <!-- Unread Message Badge -->
            <TextView
                android:id="@+id/badgeUnreadCount"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxsmall"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/badge_background"
                android:visibility="gone"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"/>

        </FrameLayout>

        <!-- Chevron -->
        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"
            android:layout_marginEnd="@dimen/dimen_16"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
