<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="@dimen/dimen_8"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/background_blur"
    app:cardCornerRadius="2dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/dimen_16"
            android:layout_marginStart="@dimen/dimen_16"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_medium"
            android:maxLines="2"
            android:paddingEnd="@dimen/dimen_8"
            android:text="Task Title"
            android:includeFontPadding="false"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/layoutStatusBadge"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/statusIndicator"
            app:layout_constraintTop_toTopOf="@+id/statusIndicator" />

        <TextView
            android:id="@+id/textTaskDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/montserrat_semi_bold"
            android:maxLines="3"
            android:includeFontPadding="false"
            android:text="Task description goes here\ndfjhdfjhdsjkhf\nhdsafkjdshfkdj\nkjdhfjksdhfkhds"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_xsmall"
            app:layout_constraintBottom_toTopOf="@+id/layoutTimeRow"
            app:layout_constraintEnd_toStartOf="@+id/imgRightArrow"
            app:layout_constraintStart_toStartOf="@+id/textTaskTitle"
            app:layout_constraintTop_toBottomOf="@id/textTaskTitle" />

        <LinearLayout
            android:id="@+id/layoutTimeRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/statusIndicator"
            app:layout_constraintStart_toStartOf="@+id/textTaskTitle">

            <TextView
                android:id="@+id/textTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:includeFontPadding="false"
                android:text="9:00 AM"
                android:textColor="@color/text_secondary" />

            <LinearLayout
                android:id="@+id/layoutAssigneeAvatars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" />

            <ImageView
                android:id="@+id/imgAttachment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_attach_file"
                android:visibility="gone"
                app:tint="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutCreatedBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/statusIndicator"
            app:layout_constraintEnd_toEndOf="@+id/imgRightArrow">

            <TextView
                android:id="@+id/textCreatedByLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Created by"
                android:includeFontPadding="false"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_xsmall" />

            <ImageView
                android:id="@+id/imgCreatorAvatar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textCreatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sulaiman"
                android:includeFontPadding="false"
                android:textSize="@dimen/text_size_xsmall"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/layoutStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTaskStatus"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Pending"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_small"
                app:chipBackgroundColor="@color/white"
                app:chipCornerRadius="4dp"
                app:chipStrokeColor="@color/warning_dark"
                app:chipStrokeWidth="1dp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/badgeUnreadCount"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/badge_background"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_xxsmall"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/dimen_16"
            android:src="@drawable/ic_chevron_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
