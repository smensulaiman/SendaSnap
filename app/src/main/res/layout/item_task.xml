<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="0dp"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Status Indicator Bar -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:background="@color/status_pending" />

        <!-- Task Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Task Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textTaskTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Task Title"
                    android:textAppearance="@style/TextAppearance.Montserrat.TitleMedium"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <!-- NEW Badge -->
                <TextView
                    android:id="@+id/badgeNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_new_background"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:text="NEW"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Task Description -->
            <TextView
                android:id="@+id/textTaskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Task description goes here"
                android:textAppearance="@style/TextAppearance.Montserrat.BodyMedium"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Task Footer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Time -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/textTaskTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09:00"
                        android:textAppearance="@style/TextAppearance.Montserrat.BodySmall"
                        android:textColor="@color/text_hint" />

                </LinearLayout>

                <!-- Assignee -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:src="@drawable/ic_person"
                        app:tint="@color/text_hint" />

                    <TextView
                        android:id="@+id/textTaskAssignee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textAppearance="@style/TextAppearance.Montserrat.BodySmall"
                        android:textColor="@color/text_hint" />

                </LinearLayout>

                <!-- Status Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTaskStatus"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Pending"
                    app:chipBackgroundColor="@color/status_pending_light"
                    app:chipStrokeColor="@color/status_pending"
                    app:chipStrokeWidth="1dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Chevron -->
        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/text_hint" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
