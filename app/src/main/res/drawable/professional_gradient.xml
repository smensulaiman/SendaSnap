<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Subtle glowing backdrop (adds depth behind the gradient) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/futuristic_glow_start"
                android:centerColor="@color/futuristic_glow_center"
                android:endColor="@color/futuristic_glow_end"
                android:angle="45" />
        </shape>
    </item>

    <!-- Main soft gradient layer (glass effect + blur tones) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/white"
                android:centerColor="@color/background_blur"
                android:endColor="@color/surface_variant"
                android:angle="45"
                android:type="linear" />

            <!-- Gentle glow border -->
            <stroke
                android:width="1dp"
                android:color="@color/glass_effect" />

            <!-- Rounded corners for modern feel -->
            <corners android:radius="24dp" />
        </shape>
    </item>

    <!-- Transparent overlay for subtle diffusion / blur illusion -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/futuristic_overlay_start"
                android:centerColor="@color/futuristic_overlay_center"
                android:endColor="@color/futuristic_overlay_end"
                android:angle="90" />
        </shape>
    </item>

</layer-list>
