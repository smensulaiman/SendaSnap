<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Tintable outline box - optimized for backgroundTint usage
    Requires android:backgroundTint to set the border color
    Example: android:backgroundTint="@color/primary"
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    android:tintMode="src_in">
    <solid android:color="@color/primary" />
    <corners android:radius="4dp" />
    <!-- Stroke will be tinted by android:backgroundTint -->
    <stroke
        android:width="1dp"
        android:color="@color/primary" />
</shape>

